{% extends 'UniversiboDashboardBundle::base.html.twig' %}
{% block title %}Home - {{ parent() }}{% endblock %}
{% block content %}
<div class="hero-unit">
  <h1>{% trans %}dashboard.welcome{% endtrans %}</h1>
  <p>{% trans %}dashboard.home.description{% endtrans %}</p>
</div>
<div class="row-fluid">
  <div class="span3">
    <h2>{% trans %}dashboard.users.title{% endtrans %}</h2>
    <ul>
      <li><strong>{% trans %}dashboard.users.active{% endtrans %}</strong>: {{ activeUsers }}</li>
      <li><strong>{% trans %}dashboard.users.logged_24h{% endtrans %}</strong>: {{ logged24h }}</li>
      <li><strong>{% trans %}dashboard.users.logged_week{% endtrans %}</strong>: {{ loggedWeek }}</li>
      <li><strong>{% trans %}dashboard.users.logged_academic{% endtrans %}</strong>: {{ loggedAcademic }}</li>
    </ul>
  </div>
  <div class="span3">
    <h2>{% trans %}dashboard.files.title{% endtrans %}</h2>
    <ul>
      <li><strong>{% trans %}dashboard.files.count{% endtrans %}</strong>: {{ filesCount }}</li>
    </ul>
    <h3>{% trans %}dashboard.files.latest{% endtrans %}</h3>
    <ul>
      {% for file in filesLatest %}
      <li>
          <a href="{{ path('universibo_legacy_user', {id_utente: file.idUtente }) }}" target="_blank">{{ file.username }}</a>
          -
          <a href="{{ path('universibo_legacy_file', {id_file: file.idFile }) }}" target="_blank">{{file.titolo}}</a>
      </li>
      {% endfor %}
    </ul>
  </div>
  <div class="span3">
    <h2>{% trans %}dashboard.professors.title{% endtrans %}</h2>
    <ul>
      {% for current in professorStatus %}
         <li><strong>{{ current.status }}</strong>: {{ current.count }}</li>
      {% endfor %}
    </ul>
    <a href="{{ path('universibo_legacy_contact_professors') }}" target="_blank">&Gt; {% trans %}dashboard.professors.contacts{% endtrans %}</a>
  </div>
  <div class="span3">
    {{ render_esi(url('universibo_dashboard_schools')) }}
  </div>
</div>
{% endblock %}
