                                        <li><a href="{{ path('universibo_legacy_credits') }}">-&nbsp;Credits</a></li>
				    </ul>
				</li>
			</ul>
		</div>
		<hr class="hide" />
		{{ render(controller('UniversiboWebsiteBundle:MyUniversiBO:box')) }}
