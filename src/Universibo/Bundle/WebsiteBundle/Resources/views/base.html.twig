		<div id="leftmenu">
			<ul>
				<li><a href="{{ path('universibo_legacy_home') }}">Homepage</a></li>
				<li>Facoltà
					<ul>{{ render(controller('UniversiboWebsiteBundle:ChannelMenu:index', { type:3 })) }}</ul>
				</li>
			</ul>
			<ul>
				<li>Servizi
                                    <ul>{{ render(controller('UniversiboWebsiteBundle:ChannelMenu:index', { type:1 })) }}</ul>
				</li>
			</ul>
			<ul class="lastElemento">
				<li>Informazioni
                                    <ul>
                                        <li><a href="{{ path('universibo_website_rules') }}">-&nbsp;Regolamento</a></li>
