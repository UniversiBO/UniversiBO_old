{% use 'form_div_layout.html.twig' with form_widget_simple as base_form_widget_simple %}

{% block form_widget_simple %}
    {{ block('base_form_widget_simple') }}&nbsp;
    {% if form.parent.vars.value.verified is defined %}
        {% if form.parent.vars.value.verified %}
        <img src="{{ asset('/bundles/universibodesign/images/action_check.png')}}"
            alt="Indirizzo verificato" title="Indirizzo verificato"/>
        {% else %}
        <img src="{{ asset('/bundles/universibodesign/images/time.png')}}"
            alt="Indirizzo in attesa di verifica" title="Indirizzo in attesa di verifica"/>
        {% endif %}
    {% endif %}
    <a href="#" class="remove-item"><img src="{{ asset('/bundles/universibodesign/images/action_delete.png')}}"
                     alt="Elimina" title="Elimina"/></a>


{% endblock %}
